    <label class="form-label">Title</label>
    <input type="text" name="postTitle" class="form-control"  aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label class="form-label">Post</label>
    <textarea class="form-control" name="postBody" id="exampleInputPassword1" cols="30" rows="10" aria-describedby="emailHelp"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


